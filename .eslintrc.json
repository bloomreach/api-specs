{
  "root": true,
  "env": {
    "es2021": true
  },
  "extends": [
    "plugin:yml/standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": [
        "*.yaml"
      ],
      "parser": "yaml-eslint-parser"
    }
  ],
  "rules": {
    "yml/quotes": [
      "error",
      {
        "prefer": "single"
      }
    ]
  }
}
